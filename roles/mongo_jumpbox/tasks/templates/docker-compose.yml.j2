services:
  mongo-jumpbox:
    image: ubuntu:22.04
    container_name: mongo-jumpbox
    command: sleep infinity
    networks:
      - internal_db
      - external_net
    volumes:
      - /etc/localtime:/etc/localtime:ro
    build:
      context: .
      dockerfile: Dockerfile

networks:
  internal_db:
    external: true
  external_net:
    driver: bridge