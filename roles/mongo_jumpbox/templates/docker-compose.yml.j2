services:
  mongo-jumpbox:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: mongo-jumpbox
    labels:
      - homepage.group={{ deployment_env | upper }}
      - homepage.name=Mongo Jumpbox
      - homepage.icon=mdi-console
      - homepage.description=Shell utilidades MongoDB
    tty: true
    stdin_open: true
    command: bash
    networks:
      - internal_db
      - external_net
    restart: unless-stopped

networks:
  internal_db:
    name: internal_db
    external: true
{% if deployment_env == "dev" %}
    internal: false
{% else %}
    driver: bridge
    internal: true
{% endif %}
  external_net:
    name: external_net
    driver: bridge
