networks:
  proxy:
    driver: bridge
  internal_db:
    driver: bridge
    internal: true
  management:
    driver: bridge

services:
  portainer:
    image: portainer/portainer-ce:${PORTAINER_VERSION}
    container_name: portainer
    restart: unless-stopped
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ app_base_path }}/portainer:/data
    networks:
      - management

  swag-external:
    image: linuxserver/swag:${SWAG_VERSION}
    container_name: swag-external
    cap_add:
      - NET_ADMIN
    environment:
      - PUID=${PUID}
      - PGID=${PGID}
      - TZ=${TZ}
      - URL=${SWAG_EXTERNAL_URL}
      - SUBDOMAINS=${SWAG_EXTERNAL_SUBDOMAINS}
      - VALIDATION=${SWAG_EXTERNAL_VALIDATION}
      - DNSPLUGIN=${SWAG_EXTERNAL_DNSPLUGIN}
    volumes:
      - {{ app_base_path }}/swag/external:/config
    ports:
      - "443:443"
      - "80:80"
    restart: unless-stopped
    networks:
      - proxy

  swag-internal:
    image: linuxserver/swag:${SWAG_VERSION}
    container_name: swag-internal
    cap_add:
      - NET_ADMIN
    environment:
      - PUID=${PUID}
      - PGID=${PGID}
      - TZ=${TZ}
      - URL=${SWAG_INTERNAL_URL}
      - SUBDOMAINS=${SWAG_INTERNAL_SUBDOMAINS}
      - VALIDATION=${SWAG_INTERNAL_VALIDATION}
      - DNSPLUGIN=${SWAG_INTERNAL_DNSPLUGIN}
    volumes:
      - {{ app_base_path }}/swag/internal:/config
    ports:
      - "8443:443"
    depends_on:
      - portainer
    restart: unless-stopped
    networks:
      - management
  frontend:
    image: nginx:alpine
    container_name: airconcheck_frontend
    volumes:
      - {{ app_base_path }}/frontend/dist:/usr/share/nginx/html:ro
    networks:
      - proxy
    restart: unless-stopped

  backend:
    build:
      context: {{ app_base_path }}/backend
      dockerfile: ../docker/express/Dockerfile
    container_name: airconcheck_backend
    env_file:
      - {{ app_base_path }}/backend/.env
    networks:
      - proxy
      - internal_db
    depends_on:
      - mongodb
    restart: unless-stopped

  mongodb:
    image: mongo:{{ mongodb_version }}
    container_name: airconcheck_mongodb
    environment:
      MONGO_INITDB_ROOT_USERNAME: {{ mongodb_root_user }}
      MONGO_INITDB_ROOT_PASSWORD: {{ mongodb_root_password }}
    volumes:
      - {{ app_base_path }}/mongodb:/data/db
    networks:
      - internal_db
    restart: unless-stopped
