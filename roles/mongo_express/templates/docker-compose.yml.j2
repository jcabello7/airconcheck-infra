version: '3.9'
services:
  mongo-express:
    image: {{ mongo_express_image }}
    container_name: mongo-express
    environment:
      ME_CONFIG_MONGODB_ADMINUSERNAME: {{ mongo_root_username }}
      ME_CONFIG_MONGODB_ADMINPASSWORD: {{ mongo_root_password }}
      ME_CONFIG_MONGODB_SERVER: mongo1
    networks:
      - internal_db
    ports:
      - 8081:8081

networks:
  internal_net:
    external: true